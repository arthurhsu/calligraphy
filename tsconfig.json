{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "newLine": "lf",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "rootDir": ".",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "types": [
      "chai",
      "mocha",
      "node",
      "websql"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
